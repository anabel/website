.title {
  @apply text-gray-600 font-header;
}

.paragraph {
  @apply text-gray-800 font-base;
}

.metadata {
  @apply text-gray-600;
}

.btn {
  @apply text-white py-2 px-3 bg-gray-600;
}

p strong {
  @apply text-gray-700 bg-yellow-200;
}

h1 {
   @apply title text-2xl mt-10 mb-2;
}

h2 {
   @apply title text-xl;
}

h3, h4 {
   @apply title text-lg;
}

html {
  @apply paragraph text-base;
}

body {
  @apply mx-auto w-5/6;
}

p {
  @apply mt-1 mb-2;
}

h2, h3, h4, .btn {
  @apply mt-3 mb-1;
}





@tailwind components;

@screen sm {
  h1 {
    @apply mt-12 mb-4;
  }

  h2, h3, h4 {
    @apply mt-4 mb-2;
  }

  .main-content {
    @apply max-w-lg mx-auto;
  }
}

@screen md {
  h1 {
    @apply text-3xl;
  }

  h2 {
    @apply text-2xl;
  }

  h3, h4 {
    @apply text-xl;
  }

  html {
    @apply text-lg;
  }

  .main-content {
    @apply max-w-xl mx-auto;
  }
}

@tailwind utilities;